<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<% resource_title = strip_newlines(strip_html(title)) %>
<title>
<% if resource_title != "Index" %>
  <%= resource_title %> | <%= metadata.title %>
<% else %><%= metadata.title %>: <%= metadata.tagline %><% end %></title>

<meta name="description" content="<%= metadata.description %>" />

<style type="text/css">
  .hidden {display:none;}
</style>
<link rel="stylesheet" href="<%= asset_path "styles/styles.scss" %>" />
<script src="<%= asset_path :js %>" defer></script>
<% live_reload_dev_js %>
